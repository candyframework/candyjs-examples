{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2015",
        "preserveConstEnums": true,
        "moduleResolution": "Node",
        "sourceMap": false,
        "baseUrl": ".",
        "allowJs": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "index.ts",
        "app/**/*"
    ]
}
